{
    "name": "@restyjs/cli",
    "version": "1.0.0",
    "description": "CLI for Resty.js framework",
    "bin": {
        "resty": "./bin/run"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "bin"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint src",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "clean": "rm -rf .turbo node_modules dist"
    },
    "keywords": [
        "resty",
        "cli",
        "framework",
        "tools"
    ],
    "author": "Satish Babariya",
    "license": "MIT",
    "dependencies": {
        "commander": "^12.0.0",
        "chokidar": "^3.6.0",
        "picocolors": "^1.0.0",
        "tsx": "^4.7.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "vitest": "^1.0.0",
        "eslint": "^9.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}